<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="François Fernandès" dbms="mysql">
    
        <createTable tableName="otc_source">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" uniqueConstraintName="pk_source"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="otc_source" columnName="id" columnDataType="bigint"/>
		
        <createTable tableName="otc_installation">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" uniqueConstraintName="pk_otc_installation"  />
            </column>
        </createTable>
		<addAutoIncrement tableName="otc_installation" columnName="id" columnDataType="bigint"/>
		
        <createTable tableName="otc_installation_log">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" uniqueConstraintName="pk_otc_installation_log" />
            </column>
        </createTable>
        <addAutoIncrement tableName="otc_installation_log" columnName="id" columnDataType="bigint"/>
		
        <createTable tableName="otc_package">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" uniqueConstraintName="pk_otc_package" />
            </column>
        </createTable>
        <addAutoIncrement tableName="otc_package" columnName="id" columnDataType="bigint"/>
		
        <createTable tableName="otc_package_installed_content">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" uniqueConstraintName="pk_otc_package_installed_content"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="otc_package_installed_content" columnName="id" columnDataType="bigint"/>

    </changeSet>

    <changeSet id="2" author="Marc Häfner" dbms="mysql">

        <createTable tableName="otc_license">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" uniqueConstraintName="pk_license"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="otc_license" columnName="id" columnDataType="bigint"/>

        <createTable tableName="otc_license_errors">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" uniqueConstraintName="pk_license_errors"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="otc_license_errors" columnName="id" columnDataType="bigint"/>

    </changeSet>

    <changeSet id="3" author="JN" dbms="mysql">

        <createTable tableName="otc_item">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" uniqueConstraintName="pk_item"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="otc_item" columnName="id" columnDataType="bigint"/>

        <createTable tableName="otc_item_configuration">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" uniqueConstraintName="pk_item_configuration"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="otc_item_configuration" columnName="id" columnDataType="bigint"/>

        <createTable tableName="otc_item_member">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" uniqueConstraintName="pk_item_member" />
            </column>
        </createTable>
        <addAutoIncrement tableName="otc_item_member" columnName="id" columnDataType="bigint"/>

    </changeSet>

</databaseChangeLog>

