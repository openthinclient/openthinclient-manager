<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        >

    <changeSet id="1" author="JN">
    
        <addPrimaryKey columnNames="id"
                       constraintName="pk_item"
                       tableName="otc_item" />
        <addColumn tableName="otc_item">
            <column name="name" type="VARCHAR(1024)" defaultValue="">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="CLOB"/>
            <column name="type" type="char(100)"/>
        </addColumn>


        <addPrimaryKey columnNames="id"
                       constraintName="pk_item_configuration"
                       tableName="otc_item_configuration" />
        <addColumn tableName="otc_item_configuration">
            <column name="item_id" type="bigint"/>
            <column name="name" type="CLOB" defaultValue="">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="CLOB"/>
            <column name="type" type="char(100)"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="otc_item_configuration"
                                baseColumnNames="item_id"
                                constraintName="fk_otc_item_configuration"
                                referencedTableName="otc_item"
                                referencedColumnNames="id" onDelete="RESTRICT"/>

        <addColumn tableName="otc_item_member">
            <column name="item_id"   type="bigint"/>
            <column name="member_id" type="bigint"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="otc_item_member"
                                 baseColumnNames="item_id"
                                 constraintName="fk_otc_item_member_item"
                                 referencedTableName="otc_item"
                                 referencedColumnNames="id" onDelete="RESTRICT"/>
        <addForeignKeyConstraint baseTableName="otc_item_member"
                                 baseColumnNames="member_id"
                                 constraintName="fk_otc_item_member_member"
                                 referencedTableName="otc_item"
                                 referencedColumnNames="id" onDelete="RESTRICT"/>

    </changeSet>

</databaseChangeLog>