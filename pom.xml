				<version>1.2.13</version>
			</dependency>
			<dependency>  <!-- spring-boot 2.x work only with logback 1.2.x -->
				<groupId>ch.qos.logback</groupId>
				<artifactId>logback-core</artifactId>
				<version>1.2.13</version>
			</dependency>
			<dependency>
				<groupId>org.apache.tomcat.embed</groupId>
