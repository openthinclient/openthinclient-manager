<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.openthinclient</groupId>
	<artifactId>manager</artifactId>
	<packaging>pom</packaging>

	<name>openthinclient Management Server</name>
	<version>${revision}</version>
	<url>http://www.openthinclient.org</url>
	<inceptionYear>2007</inceptionYear>

	<organization>
		<name>openthinclient gmbh</name>
		<url>http://www.openthinclient.com</url>
	</organization>

	<licenses>
		<license>
			<name>GPL v2</name>
			<distribution>manual</distribution>
			<url>http://www.gnu.org/copyleft/gpl.html</url>
		</license>
	</licenses>

	<properties>
		<!-- version of this management server -->
		<revision>2511-BETA3</revision>
		<!-- debian version of management server for packages -->
		<application.meta-package-version>2511~beta2</application.meta-package-version>
		<!-- debian version for auto-updates -->
		<application.packages-update-version>2511~</application.packages-update-version>
		<!-- debian repo for packages -->
		<application.repository>http://archive.openthinclient.org/openthinclient/v2511/packages</application.repository>
		<!-- definition of pre-configured profiles -->
		<application.distribution>http://archive.openthinclient.org/openthinclient/v2511/first-start-profiles/distributions.xml</application.distribution>

		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

		<apacheds.version>1.0.2</apacheds.version>
        <slf4j.version>1.7.36</slf4j.version>
		<log4j.version>2.24.3</log4j.version>
        <!--
            GLOBAL PROPERTIES FOR THE VAADIN BASED WEB CONSOLE
        -->
        <productionMode>false</productionMode>
		<vaadin.version>8.25.2</vaadin.version>
        <vaadin.plugin.version>${vaadin.version}</vaadin.plugin.version>
		<vaadin4spring.version>2.0.0.RELEASE</vaadin4spring.version>

		<!--
			SPRING FRAMEWORK AND EXTENSIONS VERSIONS
		-->
		<spring.version>5.3.39</spring.version>
		<spring.boot.version>2.7.18</spring.boot.version>
		<spring.security.version>5.8.16</spring.security.version>
		<mapstruct.version>1.1.0.Final</mapstruct.version>
	</properties>

	<modules>
		<module>util</module>
		<module>common</module>
		<module>thirdparty</module>
		<module>db</module>
		<module>services</module>
		<module>console-web</module>
		<module>first-start-wizard</module>
		<module>runtime</module>
		<module>sysreport</module>
	</modules>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.8.0</version>
					<configuration>
						<forceJavacCompilerUse>true</forceJavacCompilerUse>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>build-helper-maven-plugin</artifactId>
					<version>1.8</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<version>3.0.2</version>
					<configuration>
						<archive>
							<manifest>
								<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
							</manifest>
						</archive>
					</configuration>
				</plugin>
				<plugin>
					<groupId>com.vaadin</groupId>
					<artifactId>vaadin-maven-plugin</artifactId>
					<version>${vaadin.plugin.version}</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<repositories>
        <!--
            Required repository for the web management console.
        -->
        <repository>
            <id>vaadin-addons</id>
			<url>https://maven.vaadin.com/vaadin-addons</url>
        </repository>
		<repository>
			<id>openthinclient.org-public</id>
			<url>https://secure.openthinclient.org/nexus/content/groups/public</url>
		</repository>
		<repository>
			<id>nexus-oss-snapshots</id>
			<url>https://oss.sonatype.org/service/local/repositories/snapshots/content</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>ej-technologies</id>
			<url>https://maven.ej-technologies.com/repository</url>
		</repository>
	</repositories>

	<distributionManagement>
		<repository>
			<id>openthinclient.org-releases</id>
			<url>https://secure.openthinclient.org/nexus/content/repositories/releases/</url>
		</repository>
		<snapshotRepository>
			<id>openthinclient.org-snapshots</id>
			<url>https://secure.openthinclient.org/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>castor</groupId>
				<artifactId>castor</artifactId>
				<version>0.9.9.1</version>
			</dependency>

			<!-- spring boot depends on vulnerable version,
				 force current version -->
			<dependency>
				<groupId>org.yaml</groupId>
				<artifactId>snakeyaml</artifactId>
				<version>2.3</version>
			</dependency>

			<!-- force compatible and CVE-poor versions for dependecies'
			     dependencies and related packages -->
