                    <plugin>
                    <artifactId>jdeb</artifactId>
                    <groupId>org.vafer</groupId>
                    <version>1.3</version>
                    <executions>
                        <execution>
                            <phase>package</phase>
                            <goals>
                                <goal>jdeb</goal>
                            </goals>
                            <configuration>
                                <!--deb>${project.build.directory}/openthinclient-${jdeb.artifactId}_${jdeb.package-version}_${jdeb.filename-arch}.deb</deb-->
