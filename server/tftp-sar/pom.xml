<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.openthinclient</groupId>
		<artifactId>server</artifactId>
		<version>1.0.2-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<artifactId>tftp-sar</artifactId>
	<name>openthinclient.org TFTP service SAR</name>
	<packaging>jboss-sar</packaging>

	<build>
		<plugins>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
            </plugin>


			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-packaging-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
                    <archiveName>${project.artifactId}</archiveName>
					<excludes>
						<exclude>org.acplt.onrpc:remotetea</exclude>
						<exclude>xml-apis:xml-apis</exclude>
						<exclude>commons-pool:commons-pool</exclude>
						<exclude>jboss:jboss-system</exclude>
						<exclude>org.openthinclient:nfs-service</exclude>
						<exclude>jakarta-regexp:jakarta-regexp</exclude>
						<exclude>
							commons-logging:commons-logging
						</exclude>
						<exclude>
							commons-collections:commons-collections
						</exclude>
						<exclude>org.openthinclient.util:levigo-utils</exclude>
						<exclude>jdbm:jdbm</exclude>
						<exclude>xerces:xercesImpl</exclude>
						<exclude>sixlegs:png</exclude>
						<exclude>log4j:log4j</exclude>
						<exclude>commons-lang:commons-lang</exclude>
						<exclude>java.net:jdic</exclude>
						<exclude>jboss:jbossall-client</exclude>
						<exclude>antlr:antlr</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<extensions>true</extensions>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jboss-maven-plugin</artifactId>
				<configuration>
					<fileName>${project.build.directory}/${project.artifactId}.sar</fileName>
					<jbossHome>${basedir}/../../jboss</jbossHome>
					<serverName>default/data/nfs/root</serverName>
				</configuration>
				<executions>
					<execution>
						<id>jboss-harddeploy</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>harddeploy</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

            <plugin>
                <artifactId>jdeb</artifactId>
                <groupId>org.vafer</groupId>
                <version>1.3</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jdeb</goal>
                        </goals>
                        <configuration>
                            <deb>${project.build.directory}/openthinclient-${parent.artifactId}-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}-${buildNumber}.deb</deb>
                            <!--changesOut>${project.build.directory}/openthinclient-${parent.artifactId}-${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}.</changesOut-->
                            <verbose>true</verbose>
                            <snapshotExpand>true</snapshotExpand>
                            <!-- expand "SNAPSHOT" to what is in the "USER" env variable -->
                            <!--snapshotEnv>USER</snapshotEnv-->
                            <verbose>true</verbose>
                            <controlDir>${basedir}/src/deb/control</controlDir>
                            <dataSet>
                                <data>
                                  <src>${project.build.directory}/${artifactId}.sar</src>
                                  <type>file</type>
                                  <mapper>
                                    <type>perm</type>
                                    <prefix>/deploy</prefix>
                                    <user>loader</user>
                                    <group>loader</group>
                                  </mapper>
                                </data>
                           </dataSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>



		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.openthinclient</groupId>
			<artifactId>common</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openthinclient</groupId>
			<artifactId>server-shared</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openthinclient</groupId>
			<artifactId>tftp-service</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-system</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.directory.server</groupId>
			<artifactId>apacheds-core</artifactId>
			<version>1.0.2</version>
		</dependency>
	</dependencies>
</project>
