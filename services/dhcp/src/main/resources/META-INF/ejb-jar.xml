<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN" "http://java.sun.com/dtd/ejb-jar_2_0.dtd">

<ejb-jar>

	<display-name>Remoted</display-name>

	<enterprise-beans>

		<!-- Session Beans -->
		<session>
			<display-name>RemotedBean</display-name>

			<ejb-name>RemotedBean</ejb-name>

			<home>org.openthinclient.remoted.Remoted</home>
			<remote>org.openthinclient.remoted.Remoted</remote>
			<ejb-class>
				org.openthinclient.remoted.RemotedBean
			</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Container</transaction-type>

		</session>

	</enterprise-beans>
</ejb-jar>
